{
  "name": "activesphere.github.io",
  "version": "1.0.0",
  "main": "index.js",
  "repository": "git@github.com:activesphere/activesphere.github.io.git",
  "author": "Saneef Ansari <hello@saneef.com>",
  "license": "UNLICENSED",
  "private": true,
  "scripts": {
    "build:dev:js": "webpack --entry ./_scripts/index.js -o ./_site/public/main.js --mode development --watch",
    "build:prod:js": "webpack --entry ./_scripts/index.js -o ./_site/public/main.js --mode production",
    "build:jekyll": "bundle exec jekyll serve",
    "start": "concurrently -r \"npm:build:jekyll\" \"npm:build:dev:*\"",
    "git:add-assets": "git add -f _site/public/main.css _site/public/main.css"
  },
  "dependencies": {
    "@babel/core": "^7.1.2",
    "@babel/preset-env": "^7.1.0",
    "babel-loader": "^8.0.4",
    "concurrently": "^4.0.1",
    "css-loader": "^1.0.0",
    "mini-css-extract-plugin": "^0.4.3",
    "postcss-import": "^12.0.0",
    "postcss-loader": "^3.0.0",
    "postcss-preset-env": "^6.0.10",
    "style-loader": "^0.23.0",
    "webpack": "^4.20.2",
    "webpack-cli": "^3.1.2"
  },
  "devDependencies": {
    "pre-commit": "^1.2.2"
  },
  "pre-commit": [
    "build:prod:js",
    "git:add-assets"
  ]
}
